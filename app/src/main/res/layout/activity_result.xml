<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.ivanovi.apps.bmicalculatorpro.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/resultLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/label_font_size"
            android:text="@string/bmi_result" />

        <TextView
            android:id="@+id/resultValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="@dimen/result_width"
            android:height="@dimen/result_height"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/bmi_background"
            android:alpha="0"
            android:textStyle="bold"
            android:textSize="@dimen/result_font_size"
            android:textColor="@color/colorWhite"
            android:text="20.5" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/fab_margin"
            android:text="@string/label_calculate_another"
            android:onClick="finishActivity"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
